{% extends 'base.html.twig' %}
{% block body %}
<div class="row">
        <div class="col-md-9">
		<h2>TITULO JUEGO</h2>
		<form>
			<div class="form-group row">
				<label for="game-price-input" class="col-sm-2 col-form-label">Precio:</label>
				<div class="col-md-9">
                                        <input type="text" class="form-control" id="game-price-input" placeholder="Precio (eur)" autocomplete="off"></input>
                                </div>
				<label for="game-description-input" class="col-sm-2 col-form-label">Comentarios: </label>
				<div class="col-md-9">
                                        <textarea class="form-control" id="game-description-input" rows="5" placeholder="Comentarios" autocomplete="off"></textarea>
                                </div>
			</div>
		</form>
        </div>
        <div class="col-md-3">
                <div class="card" style="width: 100%">
                        <img class="card-img-top" id="found-game-img" src="{{ juego.getUrlPortada  }}" alt="Card image cap" style="width:100%;">
                        <div class="card-body">
                                <p class="card-text" id="found-game-description"></p>
                        </div>
                </div>
        </div>
</div>
<script src="{{ asset('js/oferta.js') }}" type='text/javascript'></script>
<script>
	var id = this.value;
	$.get('/BGGAPI/getById/' + {{ juego.getIdBgg  }}, function(data, status){
		response = $.parseJSON(JSON.stringify(data));
		$('#found-game-img').attr("src",response.boardgame.image);
		description = makeDescription(
			id,
			response.boardgame.yearpublished,
			response.boardgame.minplayers,
			response.boardgame.maxplayers,
			response.boardgame.age,
			response.boardgame.minplaytime,
			response.boardgame.maxplaytime
		);
		$('#found-game-description').html(description);
		$('#select-game-btn').removeClass('disabled').prop("disabled", false);
		console.log(id, response.boardgame.image, $('#search-game-select').val());
		$('#bgg_id').val(id);
		$('#img_url').val(response.boardgame.image);
		$('#bg_name').val($('#search-game-select:selected').text());


	});
</script>
{% endblock %}





















