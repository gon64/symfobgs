{% extends 'base.html.twig' %}
{% block body %}
<div class="col-lg-4 col-md-8 col-xs-12 text-center mx-auto">

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}



<form class="form-signin" action="{{ path('login') }}" method="POST">
      <img class="mb-4" src="{{ asset('img/bootstrap-solid.svg') }}" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Acceder a BGSS</h1>
      <label for="inputUser" class="sr-only">Usuario o email</label>
      <input type="text" name="_username" id="inputUser" class="form-control" placeholder="Usuario" required="" autocomplete="off" style="" value="{{ last_username }}" autofocus>

      <label for="inputPassword" class="sr-only">Contraseña</label>
      <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Contraseña" required="" autocomplete="off" style="">

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
      <p class="mt-5 mb-3 text-muted">
      	<a href="/registro">¿No tienes cuenta? ¡Regístrate!</a>
      </p>
      <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
    </form>
</div>
{% endblock %}
