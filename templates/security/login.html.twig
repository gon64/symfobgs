{% extends 'base.html.twig' %}
{% block body %}
<div class="col-lg-4 col-md-8 col-xs-12 text-center mx-auto">
    <form class="form-signin" action="/login" method="POST">
      <img class="mb-4" src="{{ asset('img/bootstrap-solid.svg') }}" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Acceder a BGSS</h1>
      <label for="inputUser" class="sr-only">Usuario o email</label>
      <input type="text" id="inputUser" class="form-control" placeholder="Usuario o email" required="" autocomplete="off" style="">

      <label for="inputPassword" class="sr-only">Contraseña</label>
      <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required="" autocomplete="off" style="">

      <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
      <p class="mt-5 mb-3 text-muted">
      	<a href="/registro">¿No tienes cuenta? ¡Regístrate!</a>
      </p>
      <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
    </form>
</div>
{% endblock %}
